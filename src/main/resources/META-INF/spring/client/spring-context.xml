<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="grpcClientManager" class="com.fx.client.grpc.GrpcClientManager">
        <constructor-arg value="TRADES" />
        <constructor-arg value="${grpc.hostname}" />
        <constructor-arg value="${grpc.port}" />
    </bean>
    
    <bean id="portfolioSubscriptionRequestHandler" class="com.fx.client.handlers.PortfolioSubscriptionRequestHandler">
    </bean>

    <bean id="applicationConfiguration" class="com.fx.common.ApplicationConfiguration">
    </bean>
    <bean id="stompController" class="com.fx.controller.StompController" />

</beans>